{
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "model": "gpt-4.1",
      "provider": "copilot_chat"
    },
    "default_profile": "write",
    "model_parameters": []
  },
  "autosave": "off",
  "buffer_font_size": null,
  "collaboration_panel": {
    "button": false
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "format_on_save": "off",
  "formatter": [
    {
      "code_action": "source.fixAll.biome"
    },
    {
      "code_action": "source.organizeImports.biome"
    },
    {
      "language_server": {
        "name": "biome"
      }
    }
  ],
  "hard_tabs": false,
  "indent_guides": {
    "enabled": true
  },
  "languages": {
    "JavaScript": {
      "formatter": "language_server"
    },
    "JSON": {
      "formatter": "language_server"
    },
    "Ruby": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "!rubocop"
      ],
      "tab_size": 2
    },
    "TSX": {
      "formatter": "language_server"
    },
    "TypeScript": {
      "formatter": "language_server"
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "formatter": "standard"
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": [
          "class",
          "className",
          "cn"
        ]
      }
    }
  },
  "notification_panel": {
    "button": false
  },
  "preferred_line_length": 80,
  "project_panel": {
    "button": true,
    "dock": "right",
    "sticky_scroll": false
  },
  "scrollbar": {
    "show": "auto"
  },
  "show_call_status_icon": false,
  "soft_wrap": "editor_width",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "button": false,
    "font_family": "MonoLisa"
  },
  "theme": "Tokyo Night Storm",
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "ui_font_family": "MonoLisa",
  "vim_mode": false
}
