export BUNDLE_PACKAGECLOUD__IO="{{ onepasswordRead "op://Private/API Keys/package_cloud" }}"

# Sidekiq Pro
export SIDEKIQ_PRO_CONTRIBSYS_API_TOKEN="{{ onepasswordRead "op://Private/API Keys/sidekiq_pro" }}"

# GitLab
export GITLAB_API_TOKEN="{{ onepasswordRead "op://Private/API Keys/gitlab" }}"

